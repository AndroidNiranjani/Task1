<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Task1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_text</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="editTextStyle">@style/myEdittext</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Task1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Task1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Task1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PBarTheme">
        <item name="colorSecondary">@color/white</item>

    </style>

    <style name="myEdittext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/accent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="hintTextColor">@color/secondary_text</item>
    </style>

    <style name="myButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

</resources>