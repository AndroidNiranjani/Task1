<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsAcivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backIVID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coupon Details"
                android:layout_margin="5dp"
               android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:background="#FFFCFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImgIVID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/saveTVID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="#810597"
            android:gravity="center"
            android:text="Save \n 1$"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="#F1EEEE"
        android:orientation="vertical">
<TextView
    android:id="@+id/titleTVID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Title"
    android:textSize="22sp"
    android:textColor="@color/black"
    android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/detailsTVID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="18sp"
            android:textColor="#7C7777"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:visibility="gone"
            android:id="@+id/expirydateTVID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expired Date"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:layout_margin="2dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swOnOff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                app:showText="true"
                android:layout_weight="1"
                android:textSize="@dimen/_20ssp"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addBTNID"
        android:textColor="@color/white"
        android:backgroundTint="#9B02B5"
        android:background="@drawable/btn_bg"
        android:layout_margin="10dp"/>

    <TextView
        android:background="#F4F0F0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disclaimer"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:textColor="#777575"/>

    <TextView
        android:id="@+id/disclaimerdetailsTVID"
        android:background="#ECE8E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2sp"
        android:text="Disclaimer jgjdfjdgk"
        android:padding="7dp"
        android:textSize="18sp"
        android:textColor="#494848"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>