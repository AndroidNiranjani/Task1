<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmDemo">

    <Button
        android:id="@+id/setExactbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Exact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setRepetitiveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Set Repetitive Time"
        app:layout_constraintEnd_toEndOf="@+id/setExactbtn"
        app:layout_constraintStart_toStartOf="@+id/setExactbtn"
        app:layout_constraintTop_toBottomOf="@+id/setExactbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>