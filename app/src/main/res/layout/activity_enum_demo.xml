<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/coordinator"
    tools:context=".EnumDemo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

   <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enumETID"
        android:hint="Enum"
       android:background="@color/white"
        android:paddingLeft="5dp"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enumBTID"
        android:text="Submit"
      android:layout_gravity="center"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/conditionTVID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/simplesnackBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Simple SnackBar"
        android:textAllCaps="false"
        android:background="@color/primary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/callbackBTNID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="With Action Callback"
        android:textAllCaps="false"
        android:background="@color/primary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/colorBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Custom Color"
        android:textAllCaps="false"
        android:background="@color/primary"
        android:textColor="@color/white"/>

</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>